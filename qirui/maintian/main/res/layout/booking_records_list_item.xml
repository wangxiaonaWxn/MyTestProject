<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_app_name"
        android:text="1111"
        android:textSize="28sp"></TextView>
    <TextView
        android:id="@+id/record_type"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@id/store_name"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:textColor="@color/color_app_name"
        android:text="12"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/record_matain_bg"
        android:layout_alignTop="@id/store_name"></TextView>
    <TextView
        android:id="@+id/store_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/store_name"
        android:textColor="@color/records_item_address_text_color"
        android:text="2222"
        android:textSize="22sp">
        
    </TextView>

    <TextView
        android:id="@+id/booked_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_address"
        android:text="2021.10.28"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/records_item_address_text_color"/>

    <ImageView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_call_icon"
        android:layout_marginRight="35dp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booked_time"
        android:layout_marginTop="20dp"
        android:src="@mipmap/divider"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>